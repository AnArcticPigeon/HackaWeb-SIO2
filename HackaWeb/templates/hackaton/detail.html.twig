{% extends 'base.html.twig' %}

{% block title %}Hello HackatonController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<h1>Le Hackaton</h1>
    
<div class="container mt-5">
        <div class="row">
            <div class="col-md-8">
                <div class="hackaton-detail">
                    <p><strong>Theme:</strong> {{ unHackaton.theme }}</p>
                    <p><strong>Nombres de Place:</strong> {{ unHackaton.nbPlace }}</p>
                    <p><strong>Ville:</strong> {{ unHackaton.laVille.nom }}</p>
                    <p><strong>Addresse:</strong> {{ unHackaton.addresse }}</p>
                    <p><strong>Date De Debut:</strong> {{ unHackaton.dateDeb|date('d-m-Y') }}</p>
                    <p><strong>Date De Fin:</strong> {{ unHackaton.dateFin|date('d-m-Y') }}</p>
                

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if estInscrit %}
                            <a href="" class="btn btn-primary btn-success">Inscrit</a>
                        {% endif %}
                        {% if not estInscrit %}
                            <a href="{{ path('app_choixEquipe',{idHackaton:unHackaton.id}) }}" class="btn btn-primary btn-primary">S'inscrire</a>
                        {% endif %}
                    {% endif %}
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('app_login',{id:unHackaton.id}) }}" class="btn btn-primary">S'Inscrire</a>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
